#!/usr/bin/env bash

set -e
cd "$(dirname "${BASH_SOURCE[0]}")"

DENO_FLAGS="--unstable --allow-env --allow-run --allow-net --allow-read --allow-write"

function run {(
  export PORT=8000
  deno run $DENO_FLAGS ./src/main.ts
)}

function build {(
  mkdir -p ./out
  deno compile $DENO_FLAGS --lite --output ./out/apt-repository ./src/main.ts
)}

function docker-publish {(
  version="$(date +'%Y%m%d_%H%M%S')"
  export VERSION_TAG="${version}"
  docker-compose build
  docker-compose push

  printf "Published version: %s\n" "${version}"
)}

function help {(
  echo "Available commands:"
  for fn in $(compgen -A function); do echo "  ${fn}"; done
)}

[ -z "$1" ] && help && exit 0
"$1" "${@:2}"
